{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"description": "defines a flow. A flow is just a group of steps",
	"type": "object",
	"required": ["description", "steps", "inbound_steps"],
	"additionalProperties": false,
	"properties": {
		"description": {
			"type": "string"
		},
		"endpoints": {
			"$ref": "#/definitions/definitions"
		},
		"steps": {
			"type": "object",
			"patternProperties": {
				"^.*$": {
					"type": "object",
					"required": ["type"],
					"additionalProperties": false,
					"properties": {
						"type": {
							"type": "string"
						},
						"config": {
							"type": "object"
						},
						"endpoints": {
							"$ref": "#/definitions/definitions"
						}
					}
				}
			}
		},
		"inbound_steps": {
			"type": "array",
			"items": {
				"type": "string"
			}
		}
	},
	"definitions": {
		"endpoints": {
			"type": "object",
			"patternProperties": {
				"^.*$": {
					"type": "string",
					"pattern": "^(flow:.+)|(step:.+\/.+)$"
				}
			}
		}
	}
}
